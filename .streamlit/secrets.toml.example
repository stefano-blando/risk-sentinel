# Copy this file content into Streamlit Cloud:
# App -> Settings -> Secrets
# Do NOT commit real secrets.

AZURE_OPENAI_ENDPOINT = "https://your-resource-name.api.cognitive.microsoft.com/"
AZURE_OPENAI_API_KEY = "your-azure-openai-api-key"
AZURE_OPENAI_DEPLOYMENT = "gpt-4o"
AZURE_OPENAI_FALLBACK_DEPLOYMENT = "gpt-4o-mini"
AZURE_OPENAI_API_VERSION = "2025-03-01-preview"

# Optional: judge-only GPT access.
# Leave empty to keep GPT open for all users.
JUDGE_ACCESS_CODE = "set-a-strong-code-for-judges"

# Soft throttles for stability/cost control.
GPT_MAX_CALLS_PER_MINUTE_SESSION = 8
GPT_MAX_CALLS_PER_MINUTE_GLOBAL = 20
GPT_MAX_CALLS_PER_SESSION = 120
